{% extends 'base.twig' %}

{% block content %}

    <h2>Create post</h2>

    <form action="" method="POST">
        <div id="flasherror">{{ flash.error }}</div>

        <label>Title:</label>
        <input type = "text" name="title"> <br />

        <label>Text:</label>
        <textarea cols="40" rows="10" name="content"> </textarea><br />

        <label>Author:</label> {{ username }} <br />

        <label>Pay for answers ($10) </label>
        <input type="checkbox" name="ispayedpost" value="1"> <br/>

        <input type="hidden" name="csrf_token" value="{{csrf_token}}">
        <input type="submit" name="submit" value="Create post">
    </form>
{% endblock %}
